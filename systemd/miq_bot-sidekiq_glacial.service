[Unit]
Description=ManageIQ Bot sidekiq glacial worker
After=network-online.target

[Service]
User=root
WorkingDirectory=/opt/miq_bot
Environment=RAILS_ENV=production
ExecStart=/bin/bash -lc 'bundle exec sidekiq -q miq_bot_glacial'
Restart=always
StandardInput=null
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=%n
KillMode=process

[Install]
WantedBy=multi-user.target
